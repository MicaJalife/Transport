<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEFF0"    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginLeft="4dp"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="#3F51B5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fotoperfil"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                      />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtnombreyapellido"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Nombre"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtaÃ±o"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anio"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtcurso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Curso"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="#3F51B5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SumarseViaje"
                        android:text="Sumarse a un viaje"
                        android:background="#74DBEF"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/RadioButtonIda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ida"
                                android:textColor="#FFFFFF" />

                            <RadioButton
                                android:id="@+id/RadioButtonVuelta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vuelta"
                                android:textColor="#FFFFFF" />


                        </RadioGroup>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:text="Seleccione dia: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />


                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/SpinnerDia"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="Dias"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15dp"
                        app:met_floatingLabel="normal" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:text="Seleccione bloque: "
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />


                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/SpinnerBloque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Horarios"
                        android:textColorHint="#05ab9a"
                        android:textSize="15dp"
                        app:met_floatingLabel="normal" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:text="Seleccione transportes habituales..."
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="60dp"
                        android:background="#3F51B5"
                        android:onClick="EligioAuto"
                        android:scaleType="fitCenter"
                        android:src="@drawable/auto" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="#3F51B5"
                        android:onClick="EligioColectivo"
                        android:scaleType="fitCenter"
                        android:src="@drawable/colectivo" />

                    <ImageButton
                        android:id="@+id/ElegirTransporteSubte"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="#3F51B5"
                        android:onClick="EligioSubte"
                        android:scaleType="fitCenter"
                        android:src="@drawable/subte" />

                    <ImageButton
                        android:id="@+id/ElegirTransporteBicicleta"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="#3F51B5"
                        android:onClick="EligioBicicleta"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bicicleta" />

                    <ImageButton
                        android:id="@+id/ElegirTransporteCaminando"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#3F51B5"
                        android:onClick="EligioCaminando"
                        android:scaleType="fitCenter"
                        android:src="@drawable/caminando" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/IngresoCantidad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingrese maximo de pasajeros"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/IngresoLineas"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingrese sus lineas frecuentes"
                        android:inputType="textShortMessage"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/IngresoDireccion"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ingrese su direccion"
                            android:inputType="textShortMessage"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/BotonMostrarDireccion"
                        android:layout_width="50dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#74DBEF"
                        android:onClick="consultarDireccion"
                        android:text="Mostrar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/dirEncontrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Direccion"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />

                    <TextView
                        android:id="@+id/coordenadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="Coordenadas"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />
                </LinearLayout>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="Mi direccion es correcta"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF" />

                    <CheckBox
                        android:id="@+id/CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/BotonAgregarDireccion"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#74DBEF"
                        android:onClick="BotonAgregarDireccion"
                        android:text="Agregar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/DatosCompletos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#74DBEF"
                android:onClick="SiguientePrimeraEdicion"
                android:text="Seguir"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
