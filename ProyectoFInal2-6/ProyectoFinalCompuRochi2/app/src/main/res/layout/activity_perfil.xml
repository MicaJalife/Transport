<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFEFF0"
    tools:context="com.example.rocio.proyectofinalcompurochi.ActivityPerfil">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#264E86"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/fotoperfil" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:background="#74DBEF"
                    android:onClick="EditarImagen"
                    android:text="Editar"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtnombreyapellido"
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Rocio Tarda"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtaño"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6°"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtcurso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IC"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtsede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="Sede Almagro"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtestado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Estoy feliz"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:background="#74DBEF"
                        android:onClick="EditarEstado"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#264E86"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:text="Mis transportes habituales"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="#74DBEF"
                        android:onClick="EditarTransporte"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/transporte1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/auto"
                        tools:layout_editor_absoluteX="-358dp"
                        tools:layout_editor_absoluteY="104dp" />

                    <TextView
                        android:id="@+id/TxtInfoTransporte1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="Voy por primera junta, pumacahua, terrero, boyaca, avellaneda"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/transporte2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/colectivo"
                        tools:layout_editor_absoluteX="-358dp"
                        tools:layout_editor_absoluteY="104dp" />

                    <TextView
                        android:id="@+id/TxtInfoTransporte2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="Linea 132, linea 76, linea 113"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/transporte3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/subte"
                        tools:layout_editor_absoluteX="-358dp"
                        tools:layout_editor_absoluteY="104dp" />

                    <TextView
                        android:id="@+id/TxtInfoTransporte3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="Subte A, Subte B y Subte H"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#264E86"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:text="Mis direcciones habituales"
                android:textColor="#000000"
                android:textSize="20dp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#74DBEF"
                        android:onClick="EditarDirecciones"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/txtDirecciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:hint="Mi direccion es Lautaro 791 y mi otra direccion es Fitz Roy 237"
                    android:textColor="#000000"
                    android:textColorHint="#000000" />



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#264E86"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Mis horarios habituales"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                    <Button
                        android:id="@+id/button5"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#74DBEF"
                        android:onClick="EditarHorarios"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/txthorarios"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:hint="Mis horarios son"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />


            </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:background="#74DBEF"
            android:layout_gravity="center"
            android:layout_weight="7">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:background="#74DBEF"
                android:src="@drawable/ic_buscador"
                android:onClick="BotonBuscador"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp"
                android:background="#74DBEF"
                android:src="@drawable/ic_perfil"
                android:onClick="BotonPerfil"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:background="#74DBEF"
                android:src="@drawable/ic_chat"
                android:onClick="BotonChats"/>

        </LinearLayout>
    </LinearLayout>





</android.support.constraint.ConstraintLayout>
